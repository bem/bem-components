block('button')
    .match(this._attach)(
        tag()('span'),
        content()(function() {
            return [
                { block : 'attach', elem : 'control' },
                applyNext()
            ];
        })
    );

block('button').elem('text')
    .match(this._attach)(
        attrs()(function() {
            return { id : this._textId };
        })
    );
