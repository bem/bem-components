block attach {

    tag: 'span'

    js: true

    default: {
        var id = (this.ctx.controlAttrs || {}).id || this.generateId();

        applyNext(
            this._attachButton = true,
            this._disabled = this.mods.disabled,
            this._textId = 'text' + id
        );
    }

}

block button, this._attachButton {

    tag: 'span'

    !!this._disabled, mix: [{
        mods: { disabled: 'yes' }
    }]

    default: {
        applyNext(
            this._name = this.ctx.name || 'attachment',
            this._tabindex = this.ctx.tabindex
        );
    }

    attrs: { }

    content: {
        var p = applyNext(),
            a = {
                block: 'attach',
                elem: 'control',
                attrs: this.ctx.controlAttrs
            };

        return [p, a];
    }

    elem text {
        attrs: {
            var a = applyNext() || {};
            a.id = this._textId;
            a['aria-hidden'] = true;
            return a;
        }
    }

}


