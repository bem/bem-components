block('checkbox').elem('control')(
    tag()('input'),

    attrs()(function() {
        var attrs = {};

        attrs.type = 'checkbox';
        attrs.name = this.ctx.name;
        attrs.autocomplete = 'off';
        attrs.value = this.ctx.val;
        this.ctx.disabled && (attrs.disabled = 'disabled');
        this.ctx.checked && (attrs.checked = 'checked');

        return attrs;
    })
)