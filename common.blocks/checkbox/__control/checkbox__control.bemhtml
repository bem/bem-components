block('checkbox').elem('control')(

    tag()('input'),

    attrs()(function() {
        var attrs = this._checkboxAttrs;

        attrs.type = 'checkbox';

        this.mods.disabled === 'yes' && (attrs.disabled = 'disabled');
        this.mods.checked === 'yes' && (attrs.checked = 'checked');

        return attrs;
    })

)
