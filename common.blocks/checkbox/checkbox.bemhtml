block('checkbox')(
    tag()('label'),

    js()(true),

    content()(function() {
        return [
            {
                elem : 'box',
                content : {
                    elem : 'control',
                    checked : this.mods.checked,
                    disabled : this.mods.disabled,
                    name : this.ctx.name,
                    val : this.ctx.val,
                    id : this.ctx.id
                }
            },
            this.ctx.text
        ];
    })
)
