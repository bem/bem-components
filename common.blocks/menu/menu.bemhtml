block('menu')(
    def()(function() {
        applyNext({ _menuTheme : this.mods.theme });
        delete this._menuTheme;
    }),
    attrs()(function() {
        var attrs = { role : 'menu' };
        this.mods.disabled || (attrs.tabindex = 0);
        return attrs;
    }),
    js()(true)
)

block('menu-item').match(this._menuTheme).def()(function() {
    this.mods.theme = this._menuTheme;
    applyNext();
});
