.modal
{
    position: fixed;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;

    text-align: center;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;

    &__table
    {
        display: table;
        width: 100%;
        height: 100%;
        text-align: center;
    }

    &__cell
    {
        display: table-cell;
        vertical-align: middle;
    }

    &__content
    {
        display: inline-block;
        text-align: left;
    }
}
