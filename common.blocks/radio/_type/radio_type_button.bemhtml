block('radio').mod('type', 'button')(
    def()(function() {
        var ctx = this.ctx,
            mods = this.mods,
            buttonMods = {
                togglable : 'radio',
                checked : mods.checked,
                disabled : mods.disabled,
                theme : mods.theme,
                size : mods.size
            },
            buttonContent = [
                {
                    block : 'radio',
                    elem : 'control',
                    checked : mods.checked,
                    disabled : mods.disabled,
                    name : ctx.name,
                    val : ctx.val
                },
                ctx.icon
            ];

        typeof ctx.text !== 'undefined' &&
            buttonContent.push({ elem : 'text', content : ctx.text });

        applyCtx({
            block : 'button',
            mix : [{ block : 'radio', mods : mods, js : true }].concat(ctx.mix || []),
            tag : 'label',
            mods : buttonMods,
            content : buttonContent
        });
    })
)
