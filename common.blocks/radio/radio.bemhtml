block('radio')(
    tag()('label'),

    js()(true),

    content()(function() {
        var ctx = this.ctx;
        return [
            {
                elem : 'box',
                content : {
                    elem : 'control',
                    checked : this.mods.checked,
                    disabled : this.mods.disabled,
                    name : ctx.name,
                    val : ctx.val,
                    ariaLabel : ctx.ariaLabel,
                    ariaLabelledby : ctx.ariaLabelledby
                }
            },
            ctx.text
        ];
    })
);
