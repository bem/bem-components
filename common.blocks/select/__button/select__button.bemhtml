block('select').elem('button')(
    def()(function() {
        var mods = this.mods;
        applyCtx({
            block : 'button',
            mix : { block : this.block, elem : this.elem },
            mods : {
                size : mods.size,
                theme : mods.theme,
                view : mods.view,
                focused : mods.focused,
                disabled : mods.disabled,
                checked : mods.mode !== 'radio' && !!this._checkedOptions.length
            },
            id : this._select.id,
            tabIndex : this._select.tabIndex,
            attrs : {
                'aria-expanded' : !!(this._select.mods && this._select.mods.opened),
                'aria-haspopup' : true
            },
            content : [
                apply('content'),
                { block : 'icon', mix : { block : 'select', elem : 'tick' } }
            ]
        });
    })
);
