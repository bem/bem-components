ctx = '.button_theme_islands'
{ctx} {
    font-family: Arial, Helvetica, sans-serif;

    position: relative;

    display: inline-block;

    margin: 0;
    padding: 0;

    user-select: none;

    color: #000;
    border: 0;
    border-radius: 3px;
    outline: 0;
    background: rgba(0, 0, 0, 0.2);

    text-align: center;
    white-space: nowrap;

    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);

    &::-moz-focus-inner
    {
        padding: 0;

        border: 0;
    }

    .button__text
    {
        position: relative;

        display: inline-block;
        overflow: hidden;

        text-overflow: ellipsis;
        vertical-align: top;
    }

    .icon
    {
        position: relative;
    }

    &.button_type_link
    {
        text-decoration: none;
    }

    // Decorative element (inner background)
    &:before
    {
        position: absolute;
        top: 1px;
        right: 1px;
        bottom: 1px;
        left: 1px;

        content: '';

        border-radius: 2px;
        background: #fff;
    }

    &.button_hovered
    {
        cursor: pointer;

        background: rgba(0, 0, 0, 0.3);
    }

    &.button_focused-hard
    {
        z-index: 1;

        background: rgba(178, 142, 0, 0.6);
        box-shadow: 0 0 0 1px #ffcc00, inset 0 0 0 1px #ffcc00;
    }

    &.button_pressed:before
    {
        background: #f6f5f3;
    }

    &.button_checked
    {
        background: rgba(153, 122, 0, 0.5);

        &:before
        {
            background: #ffeba0;
        }

        &.button_pressed
        {
            background: rgba(129, 103, 0, 0.6);

            &:before
            {
                background: #fee481;
            }
        }

        &.button_hovered
        {
            background: rgba(129, 103, 0, 0.6);
        }
    }

    &.button_view_plain
    {
        background: none;

        &:before
        {
            display: none;
        }

        &.button_pressed
        {
            background: #f6f5f3;
        }

        &.button_checked
        {
            background: #ffeba0;

            &.button_pressed
            {
                background: #fee481;
            }
        }

        &.button_disabled
        {
            background: none;
        }
    }

    &.button_view_action
    {
        background: #ffdb4d;

        &:before
        {
            display: none;
        }

        &.button_hovered
        {
            background: #ffd633;
        }

        &.button_pressed
        {
            background: #ffcc00;
        }

        &.button_focused-hard
        {
            animation: button-action-focus 0.5s infinite linear alternate;

            box-shadow: none;
        }
    }

    &.button_view_pseudo
    {
        overflow: hidden;

        background: none;

        &:before
        {
            background: none;
            box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.2);
        }

        &.button_hovered:before
        {
            box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.3);
        }

        &.button_focused-hard:before
        {
            box-shadow: none;
        }

        &.button_pressed:before
        {
            background: rgba(0, 0, 0, 0.05);
        }

        &.button_checked
        {
            &:before
            {
                background: #ffeba0;
                box-shadow: 0 0 0 1px rgba(153, 122, 0, 0.5);
            }

            &.button_hovered:before
            {
                box-shadow: 0 0 0 1px rgba(129, 103, 0, 0.6);
            }

            &.button_pressed:before
            {
                background: #fee481;
                box-shadow: 0 0 0 1px rgba(129, 103, 0, 0.6);
            }
        }
    }

    &.button_disabled
    {
        background: rgba(0, 0, 0, 0.08);

        &:before
        {
            display: none;
        }

        &.button_checked
        {
            background: rgba(0, 0, 0, 0.15);
        }

        .button__text
        {
            color: #767676;
        }

        .icon
        {
            opacity: 0.3;
        }
    }

    &.button_size_s
    {
        font-size: 13px;
        line-height: 24px;

        .icon
        {
            width: 24px;
        }

        .button__text
        {
            margin: 0 10px;
        }
    }

    &.button_size_m
    {
        font-size: 13px;
        line-height: 28px;

        .icon
        {
            width: 28px;
        }

        .button__text
        {
            margin: 0 13px;
        }
    }

    &.button_size_l
    {
        font-size: 15px;
        line-height: 32px;

        .icon
        {
            width: 32px;
        }

        .button__text
        {
            margin: 0 15px;
        }
    }

    &.button_size_xl
    {
        font-size: 18px;
        line-height: 38px;

        .icon
        {
            width: 38px;
        }

        .button__text
        {
            margin: 0 18px;
        }
    }

    & .icon + .button__text
    {
        margin-left: 0;
    }

    .button__text:not(:last-child)
    {
        margin-right: 0;
    }
}

@keyframes button-action-focus
{
    from
    {
        background-color: #ffdb4d;
    }

    to
    {
        background-color: #fc0;
    }
}

.control-group
{
    .button_checked + {ctx}:before
    .radio_checked + .radio {ctx}:before
    .checkbox_checked + .checkbox {ctx}:before
    {
        left: 0;
    }

    {ctx} {
        border-radius: 0;

        &:before
        {
            right: 0;

            border-radius: 0;
        }

        &.button_checked,
        &.button_focused-hard.button // Weight of selector should be greater for focused button (#1170)
        {
            &:before
            {
                right: 1px;
            }
        }

        &.button_focused-hard.button:before
        {
            left: 1px;
        }
    }

    > {ctx}:first-child,
    > :first-child {ctx}
    {
        border-radius: 3px 0 0 3px;

        &:before
        {
            border-radius: 2px 0 0 2px;
        }
    }

    > {ctx}:last-child,
    > :last-child {ctx}
    {
        border-radius: 0 3px 3px 0;

        &:before
        {
            border-radius: 0 2px 2px 0;
            right: 1px;
        }
    }

    > :only-child {ctx}
    {
        border-radius: 3px;

        &:before
        {
            border-radius: 2px;
        }
    }
}
