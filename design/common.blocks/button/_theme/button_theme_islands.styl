ctx = '.button_theme_islands'
{ctx} {
    font-family: Arial, Helvetica, sans-serif;

    position: relative;

    display: inline-block;

    margin: 0;
    padding: 0;

    user-select: none;

    color: #000;
    border: 0;
    border-radius: 3px;
    outline: 0;
    background: rgba(0, 0, 0, 0.2);

    text-align: center;
    white-space: nowrap;

    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);

    &::-moz-focus-inner
    {
        padding: 0;

        border: 0;
    }

    .button__text
    {
        position: relative;

        display: inline-block;
        overflow: hidden;

        text-overflow: ellipsis;
        vertical-align: top;
    }

    .icon
    {
        position: relative;
    }

    &.button_type_link
    {
        text-decoration: none;
    }

    // Decorative element (inner background)
    &:before
    {
        position: absolute;
        top: 1px;
        right: 1px;
        bottom: 1px;
        left: 1px;

        content: '';

        border-radius: 2px;
        background: #fff;
    }

    &.button_hovered
    {
        cursor: pointer;

        background: rgba(0, 0, 0, 0.3);
    }

    &.button_focused-hard
    {
        z-index: 1;

        background: rgba(178, 142, 0, 0.6);
        box-shadow: 0 0 0 1px #ffcc00, inset 0 0 0 1px #ffcc00;
    }

    &.button_pressed:before
    {
        background: #f6f5f3;
    }

    &.button_checked
    {
        background: rgba(153, 122, 0, 0.5);

        &:before
        {
            background: #ffeba0;
        }

        &.button_pressed
        {
            background: rgba(129, 103, 0, 0.6);

            &:before
            {
                background: #fee481;
            }
        }

        &.button_hovered
        {
            background: rgba(129, 103, 0, 0.6);
        }
    }

    &.button_view_plain
    {
        background: none;

        &:before
        {
            display: none;
        }

        &.button_pressed
        {
            background: #f6f5f3;
        }

        &.button_checked
        {
            background: #ffeba0;

            &.button_pressed
            {
                background: #fee481;
            }
        }

        &.button_disabled
        {
            background: none;
        }
    }

    &.button_view_action
    {
        background: rgba(191, 153, 0, 0.8);

        &:before
        {
            background: #ffdb4d;
        }

        &.button_pressed:before
        {
            background: #fc0;
        }

        &.button_hovered
        {
            background: rgba(159, 127, 0, 0.8);
        }
    }

    &.button_view_pseudo
    {
        overflow: hidden;

        background: none;

        &:before
        {
            background: none;
            box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.2);
        }

        &.button_hovered:before
        {
            box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.3);
        }

        &.button_focused-hard:before
        {
            box-shadow: none;
        }

        &.button_pressed:before
        {
            background: rgba(0, 0, 0, 0.05);
        }

        &.button_checked
        {
            &:before
            {
                background: #ffeba0;
                box-shadow: 0 0 0 1px rgba(153, 122, 0, 0.5);
            }

            &.button_hovered:before
            {
                box-shadow: 0 0 0 1px rgba(129, 103, 0, 0.6);
            }

            &.button_pressed:before
            {
                background: #fee481;
                box-shadow: 0 0 0 1px rgba(129, 103, 0, 0.6);
            }
        }
    }

    &.button_disabled
    {
        background: rgba(0, 0, 0, 0.08);

        &:before
        {
            display: none;
        }

        &.button_checked:before
        {
            display: block;

            background: #ffeba0;
        }

        .button__text
        {
            color: #aaa;
        }

        .icon
        {
            opacity: 0.3;
        }
    }

    // line_height - line height (same as side of icon)
    // icon_width  - icon width from guide
    // text_offset - offset of text without icon from guide
    // text_offset_with_icon - offset of text with icon from guide
    inner-layout(line_height, icon_width, text_offset, text_offset_with_icon) {
        icon_margin = (icon_width - line_height) / 2

        line-height: line_height;

        .icon
        {
            width: line_height;
            margin-left: icon_margin;

            &:last-child
            {
                margin-right: icon_margin;
            }

            &:only-child
            {
                margin: 0;
            }
        }

        .button__text
        {
            margin: 0 text_offset;
        }

        .icon + .button__text
        {
            margin-left: 0;
        }

        .icon:first-child + .button__text
        {
            margin-left: icon_margin - icon_width + text_offset_with_icon;
        }

        .button__text + .icon
        {
            margin-left: - text_offset;
        }
        .button__text + .icon:last-child
        {
            margin-left: text_offset_with_icon - icon_margin - line_height - text_offset;
        }
    }

    &.button_size_s
    {
        font-size: 13px;
        inner-layout: 24px, 34px, 10px, 30px;
    }

    &.button_size_m
    {
        font-size: 13px;
        inner-layout: 28px, 34px, 13px, 30px;
    }

    &.button_size_l
    {
        font-size: 15px;
        inner-layout: 32px, 36px, 15px, 31px;
    }

    &.button_size_xl
    {
        font-size: 18px;
        inner-layout: 38px, 40px, 18px, 35px;
    }

    .icon + .icon
    {
        margin-left: 0;
    }
}

.control-group
{
    .button_checked + {ctx}:before
    .radio_checked + .radio {ctx}:before
    .checkbox_checked + .checkbox {ctx}:before
    {
        left: 0;
    }

    {ctx} {
        border-radius: 0;

        &:before
        {
            right: 0;

            border-radius: 0;
        }

        &.button_checked,
        &.button_focused-hard.button // Weight of selector should be greater for focused button (#1170)
        {
            &:before
            {
                right: 1px;
            }
        }

        &.button_focused-hard.button:before
        {
            left: 1px;
        }
    }

    > {ctx}:first-child,
    > :first-child {ctx}
    {
        border-radius: 3px 0 0 3px;

        &:before
        {
            border-radius: 2px 0 0 2px;
        }
    }

    > {ctx}:last-child,
    > :last-child {ctx}
    {
        border-radius: 0 3px 3px 0;

        &:before
        {
            border-radius: 0 2px 2px 0;
            right: 1px;
        }
    }

    > :only-child {ctx}
    {
        border-radius: 3px;

        &:before
        {
            border-radius: 2px;
        }
    }
}
