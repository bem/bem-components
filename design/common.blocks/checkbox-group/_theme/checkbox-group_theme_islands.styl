.checkbox-group_theme_islands
{
    display: inline-block;

    &.checkbox-group_size_m
    {
        line-height: 24px;
    }

    &.checkbox-group_size_l
    {
        line-height: 30px;
    }

    &.checkbox-group_type_button
    {
        display: inline-block;

        white-space: nowrap;
    }

    .checkbox_checked + .checkbox .button:before
    {
        left: 0;
    }
}
