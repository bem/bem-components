.checkbox_theme_simple
{
    .checkbox__control
    {
        position: absolute;
        z-index: -1;

        visibility: hidden;
    }

    .checkbox__box
    {
        display: inline-block;
        pointer-events: none; // fix #1472 (see ftlabs/fastclick#351 for details)

        &:before
        {
            line-height: 0.6em;

            display: inline-block;

            width: 0.75em;
            height: 0.75em;
            margin: 0.1em 0.2em 0.3em;

            content: ' ';
            vertical-align: middle;

            border-radius: 2px;
            background: #fff;
            box-shadow: inset 0 0 1px 1px rgba(0, 0, 0, 0.5);
        }
    }

    &.checkbox_disabled
    {
        opacity: 0.6;
    }

    &.checkbox_checked .checkbox__box:before
    {
        content: '\2713';

        background: #fff7db;
    }
}
