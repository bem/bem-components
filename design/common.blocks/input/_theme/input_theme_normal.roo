.input_theme_normal
{
    font-family: $theme_normal_fontFamily;

    display: inline-block;

    .input__box
    {
        position: relative;

        display: block;

        -webkit-touch-callout: none;
        user-select: none;

        border: $theme_normal_border;
        background: $theme_normal_background;
    }

    .input__control
    {
        font-family: inherit;
        line-height: inherit;

        position: relative;

        display: inline-block;

        box-sizing: border-box;
        width: 100%;

        border: 0;
        outline: none;
        background: none;

        -webkit-appearance: none;
        -webkit-tap-highlight-color: rgba(0, 0, 0, 0);

        /* лишние отступы у текста */
        &::-webkit-search-decoration
        {
            -webkit-appearance: none;
        }

        /* нативный крестик */
        &::-webkit-search-cancel-button
        {
            display: none;
        }

        &::-webkit-input-placeholder
        {
            color: #999;
            text-indent: 0;
        }

        &::-moz-placeholder
        {
            opacity: 1;
            color: #999;
        }

        &::-ms-clear
        {
            display: none;
        }
    }

    .input__clear
    {
        position: absolute;
        top: 0;
        right: 0;

        cursor: text;

        opacity: 0;
        background: 50% 50% no-repeat;

        &_visible
        {
            opacity: 0.3;

            &:hover
            {
                cursor: pointer;

                opacity: 1;
            }
        }
    }

    &.input_focused
    {
        .input__box
        {
            border-color: $theme_normal_focused_borderColor;
            box-shadow: $theme_normal_focused_boxShadow;
        }
    }

    &.input_disabled
    {
        background: $theme_normal_disabled_background;

        .input__clear
        {
            display: none;
        }

        .input__box,
        .input__control
        {
            color: $theme_normal_disabled_color;
            cursor: default;
        }
    }

    &.input_size_s .input__clear,
    &.input_size_m .input__clear
    {
        width: 22px;
        height: 22px;

        background-image: url(_normal/clear_size_s.svg);
        background-position: 6px 50%;
    }

    &.input_size_s
    {
        .input__box
        {
            line-height: $theme_normal_size_s_innerHeight;
        }

        .input__control
        {
            font-size: $theme_normal_size_s_fontSize;

            height: $theme_normal_size_s_innerHeight;
            padding: 3px 0 3px 5px;
        }

        &.input_has-clear .input__box
        {
            padding-right: 22px;
        }

    }

    &.input_size_m
    {
        .input__box
        {
            line-height: $theme_normal_size_m_innerHeight;
        }

        .input__control
        {
            font-size: $theme_normal_size_m_fontSize;

            height: $theme_normal_size_m_innerHeight;
            padding: 5px 0 5px 7px;
        }

        &.input_has-clear .input__box
        {
            padding-right: 26px;
        }

        .input__clear
        {
            width: 26px;
            height: 26px;

            background-position: 8px 50%;
        }
    }

    &.input_size_l .input__clear,
    &.input_size_xl .input__clear
    {
        width: 30px;
        height: 30px;

        background-image: url(_normal/clear_size_l.svg);
        background-position: 8px 50%;
    }

    &.input_size_l
    {
        .input__box
        {
            line-height: $theme_normal_size_l_innerHeight;
        }

        .input__control
        {
            font-size: $theme_normal_size_l_fontSize;

            height: $theme_normal_size_l_innerHeight;
            padding: 5px 0 5px 9px;
        }

        &.input_has-clear .input__box
        {
            padding-right: 30px;
        }
    }

    &.input_size_xl
    {
        .input__box
        {
            line-height: $theme_normal_size_xl_innerHeight;
        }

        .input__control
        {
            font-size: $theme_normal_size_xl_fontSize;

            height: $theme_normal_size_xl_innerHeight;
            padding: 6px 0 6px 11px;
        }

        &.input_has-clear .input__box
        {
            padding-right: 36px;
        }

        .input__clear
        {
            width: 36px;
            height: 36px;

            background-position: 11px 50%;
        }
    }

}
