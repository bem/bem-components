.input_theme_simple
{
    display: inline-block;

    .input__box,
    &.input_type_textarea .input__control
    {
        position: relative;

        display: block;

        user-select: none;

        border: 1px solid rgba(0, 0, 0, 0.3);
        background: #fff;
    }

    .input__control
    {
        font-family: inherit;
        font-size: 100%;

        box-sizing: border-box;
        width: 100%;
        margin: 0;

        border: 0;

        -webkit-appearance: none;

        &::-ms-clear
        {
            display: none;
        }

        &::-webkit-search-decoration
        {
            -webkit-appearance: none;
        }

        &::-webkit-search-cancel-button
        {
            display: none;
        }
    }

    .input__clear
    {
        position: absolute;
        z-index: 1;
        top: 0;
        right: 0;
        bottom: 0;

        display: none;

        margin: 0;
        padding: 0;

        user-select: none;

        &:after
        {
            font-size: 140%;
            font-weight: bold;
            line-height: 1;

            display: block;

            width: 1.2em;

            content: 'Ã—';
            text-align: center;
        }

        &_visible
        {
            display: block;

            cursor: pointer;

            opacity: 0.2;

            &:hover
            {
                opacity: 1;
            }
        }
    }

    &.input_disabled
    {
        opacity: 0.6;

        .input__control
        {
            resize: none;
        }

        .input__clear
        {
            display: none;
        }

        .input__box,
        .input__control
        {
            cursor: auto;
        }
    }

    &.input_width_available
    {
        width: 100%;
    }

    &.input_focused
    {
        .input__box,
        &.input_type_textarea .input__control
        {
            box-shadow: 0 0 5px 1px #fc0;
        }
    }

    &.input_focused .input__control:focus
    {
        outline: none;
    }

    &.input_type_textarea
    {
        position: relative;

        &.input_disabled
        {
            .input__control
            {
                resize: none;
            }
        }

        &.input_has-clear
        {
            .input__clear
            {
                height: 18px;
            }

            .input__control
            {
                padding-right: 20px;
            }
        }
    }
}
