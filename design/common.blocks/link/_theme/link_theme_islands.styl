.link_theme_islands
{
    color: #04b;
    cursor: pointer;
    transition: color 0.15s ease-out;
    text-decoration: none;

    -webkit-tap-highlight-color: rgba(0, 0, 0, 0.1);

    &.link_view
    {
        &_minor
        {
            color: #669;
        }

        &_external
        {
            color: #070;
        }

        &_ghost
        {
            color: #999;

            &:hover
            {
                color: #000;
            }
        }

        &_text
        {
            color: #000;
        }

        &_strong
        {
            font-weight: bold;
        }
    }

    &:hover
    {
        color: #e00;
    }

    &.link_size
    {
        &_s
        {
            font-size: 13px;
        }

        &_m
        {
            font-size: 13px;
        }

        &_l
        {
            font-size: 15px;
        }

        &_xl
        {
            font-size: 18px;
        }
    }

    &.link_disabled
    {
        -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    }
}
