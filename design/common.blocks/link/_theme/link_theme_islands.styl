.link_theme_islands
{
    color: #44b;
    cursor: pointer;
    transition: color 0.15s ease-out;
    text-decoration: none;

    -webkit-tap-highlight-color: rgba(0, 0, 0, 0.1);

    &.link_view
    {
        &_minor
        {
            color: #669;
        }

        &_external
        {
            color: #070;
        }
    }

    &:hover
    {
        color: #e00;
    }
}
