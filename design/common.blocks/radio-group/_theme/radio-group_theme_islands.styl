.radio-group_theme_islands
{
    display: inline-block;

    &.radio-group_size_m
    {
        line-height: 24px;
    }

    &.radio-group_size_l
    {
        line-height: 30px;
    }

    &.radio-group_type_button
    {
        display: inline-block;

        white-space: nowrap;
    }

    .radio_checked + .radio .button:before
    {
        left: 0;
    }
}
