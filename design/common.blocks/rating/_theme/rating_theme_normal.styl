.rating_theme_normal.rating_size_m {
    overflow: hidden;
    display: inline-block;
    position: relative;

    .rating__input
    {
        position: absolute;
        left: 0;
        top: -12px;
        opacity: 0;
    }

    &.rating_focused
    {
        border-color: rgba(0, 0, 0, 0.2);
        box-shadow: 0 0 5px 1px #fc0;
    }

    &.rating_disabled
    {
      z-index: -2;
      opacity: .5;
    }

    .rating__label,
    &:hover .rating__label
    {
        float: right;
        display: block;
        width: 16px;
        height: 15px;
        background: url('stars_size_m.png') 0 0;
    }

    .rating__label:hover,
    .rating__label_hovered,
    .rating__label_hovered ~ .rating__label,
    .rating__label:hover ~ .rating__label
    {
        background-position: 0 -15px;
        cursor: pointer;
    }

    .rating__labelCut
    {
        position: absolute;
        height: 15px;
        background: url('stars_size_m.png') 0 -15px;
        z-index: -1;
    }

}

