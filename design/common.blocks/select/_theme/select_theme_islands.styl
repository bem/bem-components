.select_theme_islands
{
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;

    max-width: 100%;

    vertical-align: bottom;

    .select__button
    {
        width: 100%;

        text-align: left;
        vertical-align: top;

        .button__text
        {
            display: block;

            &:empty:before
            {
                content: '\00a0';
            }
        }

        &.button_size_s
        {
            .button__text
            {
                padding-right: 22px;
            }

            .icon
            {
                width: 25px;
            }
        }


        &.button_size_m
        {
            .button__text
            {
                padding-right: 25px;
            }

            .icon
            {
                width: 31px;
            }
        }

        &.button_size_l
        {
            .button__text
            {
                padding-right: 29px;
            }

            .icon
            {
                width: 35px;
            }
        }

        &.button_size_xl
        {
            .button__text
            {
                padding-right: 33px;
            }

            .icon
            {
                width: 39px;
            }
        }
    }

    .select__tick
    {
        position: absolute;
        top: 0;
        right: 0;

        background-image: url(../../theme/_islands/arrow.svg);

        transition: transform 0.1s ease-out;
    }

    &.select_size_s .select__tick
    {
      background-image: url(../../theme/_islands/arrow-s.svg);
    }

    &.select_opened .select__tick
    {
        transform: rotate(-180deg);
    }

    &.select_width_available
    {
        width: 100%;
    }
}
