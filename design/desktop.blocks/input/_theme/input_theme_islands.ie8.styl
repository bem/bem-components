.input_theme_islands
{
    border: 1px solid #ccc;

    .input__clear
    {
        visibility: hidden;

        &_visible
        {
            visibility: visible;
            filter: unquote('alpha(opacity=30)');

            &:hover
            {
                filter: unquote('alpha(opacity=100)');
            }
        }
    }

    &.input_focused
    {
        border: 1px solid #fc0;
        outline: 1px solid #fc0;
    }

    &.input_disabled
    {
        background: #ebebeb;

        .input__box,
        .input__control
        {
            color: #999;
        }
    }

    sizeList = (24 28 32 38);
    for sizeVal, i in s m l xl {
        &.input_size_{sizeVal}
        {
            .input__control
            {
                line-height: sizeList[i]px;
            }
        }
    }

    &.input_size_s .input__clear,
    &.input_size_m .input__clear
    {
        background-image: url(../../theme/_islands/clear_size_s.png);
    }

    &.input_size_l .input__clear,
    &.input_size_xl .input__clear
    {
        background-image: url(../../theme/_islands/clear_size_l.png);
    }
}
