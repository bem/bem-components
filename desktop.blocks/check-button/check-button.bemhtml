block check-button {

    tag: 'label'

    js: true

    attrs: {
        'for': this.generateId()
    }

    default: {
        // TODO: проверить шаблон
        var ctx = this.ctx;
        applyNext(this._control = {
            elem: 'control',
            id: this.generateId(),
            name: ctx.name,
            tabindex: ctx.tabindex,
            checked: this.mods.checked,
            disabled: this.mods.disabled,
            value: (ctx.value || ctx.content)
        });
    }

    content: [
        this._control,
        {
            elem: 'text',
            tag: 'span',
            content: this.ctx.content
        }
    ]

}
