{
  "author": "",
  "name": "bem-components",
  "version": "2.0.0",
  "description": "BEM Components Library",
  "repository": {
    "type": "git",
    "url": "git://github.com/bem/bem-components.git"
  },
  "keywords": [
    "bem"
  ],
  "engines": {
    "node": ">=0.10"
  },
  "dependencies": {
    "bem-environ": "~1.4.0"
  },
  "devDependencies": {
    "bem": "~0.8.0",
    "bem-tools-autoprefixer": "~0.0.3",
    "bh": "~1.0.1",
    "bower-npm-install": "~0.5.4",
    "csscomb": "~2.0.0",
    "gemini": "^0.3.0",
    "git-hooks": "0.0.6",
    "http-server": "^0.6.1",
    "istanbul": "^0.2.7",
    "jscs": "1.3.0",
    "jshint": "2.3.0",
    "jshint-groups": "0.6.0",
    "roole": "~0.9.0",
    "svgo": "0.4.1"
  },
  "optionalDependencies": {},
  "private": true,
  "scripts": {
    "deps": "bower-npm-install --non-interactive",
    "build": "npm run deps && bem make -w 10 sets",
    "test": "npm run lint && npm run unit && npm run gemini",
    "lint": "jshint-groups && jscs . && csscomb -vl .",
    "unit": "npm run deps && bem make -w 10 desktop.specs touch-pad.specs touch-phone.specs",
    "gemini": "http-server -s -p 8000 & p=$!; gemini test; kill -9 ${p}",
    "gemini-gather": "http-server -s -p 8000 & p=$!; gemini gather; kill -9 ${p}",
    "coverage": "ISTANBUL_COVERAGE=yes npm run unit"
  }
}
