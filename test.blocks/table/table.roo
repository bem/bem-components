.table
{
    border-collapse: collapse;

    &__title
    {
        padding: 0 2em 0.5em 0;

        border-bottom: 1px solid #bbb;

        text-align: left;
    }

    &__cell
    {
        padding: 1em 2em 1em 0;

        border-bottom: 1px solid #ddd;

        vertical-align: top;
    }

    &__title:last-child,
    &__cell:last-child
    {
        padding-right: 0;
    }
}
